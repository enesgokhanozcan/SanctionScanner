<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Kitap Ekle</h3>
                </div>
                <div class="card-body">
                    <form enctype="multipart/form-data" method="post" action="AddBook">
                        <div class="form-group">
                            <label for="bookName">Kitabın Adı</label>
                            <input type="text" class="form-control" id="bookName" name="BookName" placeholder="Kitabın adını giriniz.">
                        </div>
                        <div class="form-group">
                            <label for="bookAuthor">Yazarın Adı</label>
                            <input type="text" class="form-control" id="bookAuthor" name="Author" placeholder="Kitabın yazarının adını giriniz.">
                        </div>
                        <div class="form-group mt-3">
                            <label for="photo">Kitabın Resmi:</label>
                            <input type="file" class="form-control-file" id="BookImage" name="BookImage">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mt-3">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>